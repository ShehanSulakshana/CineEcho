rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['displayName', 'email'])
        && request.resource.data.displayName is string
        && request.resource.data.email is string
        && (!('about' in request.resource.data) || request.resource.data.about is string);
      allow delete: if isOwner(userId);
      
      match /watched_movies/{movieId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['tmdbId', 'watchedAt'])
          && request.resource.data.tmdbId is int
          && request.resource.data.tmdbId > 0;
        allow delete: if isOwner(userId);
      }
      
      match /watched_episodes/{episodeKey} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['seriesTmdbId', 'seasonNumber', 'episodeNumber', 'watchedAt'])
          && request.resource.data.seriesTmdbId is int
          && request.resource.data.seriesTmdbId > 0
          && request.resource.data.seasonNumber is int
          && request.resource.data.seasonNumber >= 0
          && request.resource.data.episodeNumber is int
          && request.resource.data.episodeNumber > 0;
        allow delete: if isOwner(userId);
      }
      
      match /favorite_movies/{movieId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['tmdbId', 'favoritedAt'])
          && request.resource.data.tmdbId is int
          && request.resource.data.tmdbId > 0;
        allow delete: if isOwner(userId);
      }
      
      match /favorite_series/{seriesId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasAll(['seriesTmdbId', 'favoritedAt'])
          && request.resource.data.seriesTmdbId is int
          && request.resource.data.seriesTmdbId > 0;
        allow delete: if isOwner(userId);
      }
      
      match /stats/{statDoc} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId)
          && request.resource.data.moviesWatchedCount is int
          && request.resource.data.episodesWatchedCount is int
          && request.resource.data.seriesWatchedCount is int
          && request.resource.data.movieWatchMinutes is int
          && request.resource.data.seriesWatchMinutes is int;
      }
    }
    
    match /feedback/{feedbackId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'userName', 'userEmail', 'subject', 'message', 'feedbackType', 'timestamp'])
        && request.resource.data.subject is string
        && request.resource.data.subject.size() >= 5
        && request.resource.data.subject.size() <= 100
        && request.resource.data.message is string
        && request.resource.data.message.size() >= 10
        && request.resource.data.message.size() <= 1000
        && request.resource.data.feedbackType is string
        && request.resource.data.feedbackType in ['Bug Report', 'Feature Request', 'Suggestion', 'General Feedback', 'Other']
        && request.resource.data.timestamp is timestamp
        && !exists(/databases/$(database)/documents/feedback/$(feedbackId))
        && query('/databases/$(database)/documents/feedback')
          .where('userId', '==', request.auth.uid)
          .where('timestamp', '>=', now - duration.value(5, 'm')).size() == 0
        && query('/databases/$(database)/documents/feedback')
          .where('userId', '==', request.auth.uid)
          .where('timestamp', '>=', now - duration.value(24, 'h')).size() < 10;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if false;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
